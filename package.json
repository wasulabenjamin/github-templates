{
  "name": "github-templates",
  "description": "GitHub workflow templates and automation",
  "keywords": ["CI/CD", "git", "github", "github-automations", "github-templates", "github-workflow"],
  "type": "module",
  "author": "wasulabenjamin",
  "repository": "wasulabenjamin/github-templates",
  "license": "MIT",
  "private": true,
  "version": "0.0.0",
  "engines": {
    "node": ">=20.x <=24.x"
  },
  "scripts": {
    "lint:html": "htmlhint \"**/*.{htm,html}\"",
    "lint:css": "stylelint \"**/*.{css,scss,vue}\" --formatter verbose",
    "lint:css:fix": "stylelint \"**/*.{css,scss,vue}\" --fix",
    "lint:js": "eslint \"**/*.{js,ts,vue}\" --max-warnings 5",
    "lint:js:fix": "eslint \"**/*.{js,ts,vue}\" --fix",
    "lint": "npm run lint:html && npm run lint:css && npm run lint:js",
    "lint:fix": "npm run lint:css:fix && npm run lint:js:fix",
    "prettier:check": "prettier --check \"**/*.{js,ts,jsx,tsx,vue,css,scss,html,yml,json,md,graphql}\"",
    "prettier:write": "prettier --write \"**/*.{js,ts,jsx,tsx,vue,css,scss,html,yml,json,md,graphql}\"",
    "typescript": "vue-tsc --noEmit",
    "typescript:watch": "vue-tsc --noEmit --watch",
    "audit": "npm audit --audit-level moderate",
    "audit:security": "npm audit --audit-level high",
    "check": "npm run lint && npm run prettier:check && npm run typescript && npm run audit",
    "check:fix": "npm run lint:fix && npm run prettier:write && npm run typescript",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:watch": "vitest",
    "generate:sitemap": "node scripts/generate-sitemap.js",
    "build": "npm run generate:sitemap && vue-tsc --noEmit && vite build",
    "build:dev": "vite",
    "build:preview": "vite preview"
  },
  "dependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vue/tsconfig": "^0.8.1",
    "eslint-plugin-vue": "^10.6.1",
    "globals": "^16.5.0",
    "htmlhint": "^1.8.0",
    "prettier": "^3.7.1",
    "stylelint": "^16.26.0",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-scss": "^6.12.1",
    "vitest": "^4.0.14",
    "vue": "^3.5.25",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.1.5"
  }
}

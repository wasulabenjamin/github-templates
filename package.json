{
  "name": "github-templates",
  "description": "GitHub workflow templates and automation",
  "keywords": [
    "CI/CD",
    "git",
    "github",
    "github-automations",
    "github-templates",
    "github-workflow"
  ],
  "type": "module",
  "author": "wasulabenjamin",
  "repository": "wasulabenjamin/github-templates",
  "license": "MIT",
  "private": true,
  "version": "0.0.0",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint-plugin-vue": "^10.5.1",
    "vue": "^3.5.24"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "audit-ci": "^7.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "stylelint": "^16.25.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-scss": "^6.12.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.9",
    "vue-tsc": "^3.1.3"
  },
  "engines": {
    "node": ">=20.x <=24.x"
  },
  "scripts": {
    "audit:deps": "npm audit --audit-level=moderate",
    "build": "npm run generate:sitemap && vue-tsc -b && vite build",
    "dev": "vite",
    "preview": "vite preview",
    "check:eslint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "check:prettier": "prettier --check .",
    "check:typescript": "tsc --noEmit",
    "format:prettier": "prettier --write .",
    "fix:eslint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "generate:sitemap": "node scripts/generate-sitemap.js",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test"
  }
}

{
  "name": "github-templates",
  "description": "Predefined GitHub templates to automate and standardize repos.",
  "keywords": ["CI/CD", "git", "github", "github-automations", "github-templates", "github-workflow"],
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "author": "wasulabenjamin",
  "license": "MIT",

  "browserslist": ["defaults", "not IE 11", "maintained node versions"],

  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "audit-ci": "^7.1.0",
    "eslint-plugin-vue": "^10.6.2",
    "globals": "^16.5.0",
    "htmlhint": "^1.8.0",
    "jsdom": "^27.2.0",
    "prettier": "^3.7.3",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-scss": "^6.12.1",
    "vitest": "^4.0.14",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.1.5"
  },

  "engines": {
    "node": ">=20.x <=24.x",
    "npm": ">=9.0.0"
  },

  "repository": {
    "type": "git",
    "url": "https://github.com/wasulabenjamin/github-templates.git"
  },

  "scripts": {
    "lint": "npm run lint:html && npm run lint:css && npm run lint:js",
    "lint:fix": "npm run lint:css:fix && npm run lint:js:fix",
    "lint:html": "htmlhint \"public/*.html\" \"src/**/*.html\" \"index.html\"",
    "lint:css": "stylelint \"**/*.{css,scss,vue}\" --formatter verbose",
    "lint:css:fix": "stylelint \"**/*.{css,scss,vue}\" --fix",
    "lint:js": "eslint \"**/*.{js,ts,vue}\" --max-warnings 0",
    "lint:js:fix": "eslint \"**/*.{js,ts,vue}\" --fix",

    "format": "prettier --write . 2>&1 | findstr /V \"unchanged\" || exit 0",
    "format:check": "prettier --check .",

    "typescript": "vue-tsc --noEmit",
    "typescript:watch": "vue-tsc --noEmit --watch",

    "check": "npm run lint && npm run format:check && npm run typescript",
    "check:fix": "npm run lint:fix && npm run format",

    "audit": "audit-ci --moderate --production",
    "audit:dev": "audit-ci --moderate --dev",
    "audit:all": "audit-ci --moderate --all",

    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",

    "generate:sitemap": "node scripts/generate-sitemap.js",

    "build": "npm run generate:sitemap && vue-tsc --noEmit && vite build",
    "dev": "vite",
    "preview": "vite preview"
  }
}

# Helps maintain consistent coding styles across different editors & IDEs
# See https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8  # Use UTF-8 encoding
end_of_line = lf # Use LF (Unix-style) line endings
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

# Markdown files (allow trailing whitespace for line breaks)
[*.md]
trim_trailing_whitespace = false

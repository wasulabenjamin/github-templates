{
  "$schema": "https://htmlhint.com/schema.json",

  "doctype-first": true,
  "doctype-html5": true,
  "head-script-disabled": true,
  "html-lang-require": true,
  "link-rel-canonical-require": false,
  "meta-charset-require": true,
  "meta-description-require": true,
  "meta-viewport-require": true,
  "script-disabled": false,
  "style-disabled": false,
  "title-require": true,

  "alt-require": true,
  "aria-label-misuse": "warning",
  "attr-lowercase": true,
  "attr-no-duplication": true,
  "attr-no-unnecessary-whitespace": true,
  "attr-sorted": false,
  "attr-unsafe-chars": true,
  "attr-value-double-quotes": true,
  "attr-value-no-duplication": true,
  "attr-value-not-empty": true,
  "attr-value-single-quotes": false,
  "attr-whitespace": true,
  "button-type-require": true,
  "form-method-require": true,
  "input-requires-label": true,

  "empty-tag-not-self-closed": false,
  "frame-title-require": true,
  "h1-require": false,
  "href-abs-or-rel": false,
  "main-require": false,
  "src-not-empty": true,
  "tag-no-obsolete": true,
  "tag-pair": true,
  "tag-self-close": true,
  "tagname-lowercase": true,
  "tagname-specialchars": true,
  "tags-check": true,
  "void-tag-self-close": true,

  "id-class-ad-disabled": true,
  "id-class-value": "dash",
  "id-unique": true,

  "inline-script-disabled": true,
  "inline-style-disabled": true,

  "spec-char-escape": true,
  "space-tab-mixed-disabled": "space",

  "exclude": ["coverage/**", "dist/**", "node_modules/**", "playwright-report/**", "test-results/**"]
}
